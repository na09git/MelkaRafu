<div class="container" style="padding-top: 85px; padding-bottom: 30px;">
    <div class="row">

        {{!-- Left --}}
        <div class="col-md-8" style="padding-right: 50px; padding-left: 50px;">

            <div class="row">
                <div class="col text-end">
                    <h3>{{investment.title}}</h3>
                </div>

                <div class="col">
                    <a href="/investment/edit/{{investment._id}}" class="btn p-1 btn-float text-primary">
                        <i class="fas fa-edit fa-2x mx-1"></i>
                    </a>
                </div>
            </div>
            <div class="card-content">
                <div style="padding: 7px;">

                    <a href="data:{{investment.contentType}};base64,{{investment.imageBase64}}"
                        data-gallery="portfolio-gallery-app" class="glightbox img-fluid post-author-img flex-shrink-0">
                        <img src="data:{{investment.contentType}};base64,{{investment.imageBase64}}"
                            alt="investment image" class="img-fluid"
                            style="height: 200px; width: 100%; border-radius:10px;">
                    </a>

                </div>
            </div>


            <div class="p-3 card news">
                <div class="card-content">
                    {{!-- Title --}}
                    <div class="p-2" style="padding-left: 50px;">
                        <span>◇ Title :</span>
                        <span style="padding-left: 40px;">{{investment.title}}</span>
                    </div>
                    <hr>

                    {{!-- investment --}}
                    <div class="p-2" style="padding-left: 50px;">
                        <span>◇ investment Message :</span>
                        <br>
                        <span style="padding-left: 40px;">{{stripTags investment.body}}</span>

                    </div>
                    <hr>
                    {{!-- Broadcasted Date --}}
                    <div class="p-2" style="padding-left: 50px;">
                        <span>◇ Written Date : </span>
                        <span style="padding-left: 40px;"> {{formatDate investment.createdAt 'MMMM Do YYYY, h:mm:ss
                            a'}}</span>
                    </div>

                </div>
            </div>
        </div>


        {{!-- Right --}}
        <div class="col-md-4" style="padding-left: 45px; padding-right: 45px; padding-top: 25px; ">
            <div class="card text-center">
                <div class="card-content">
                    <div style="padding-top: 10px;">
                        <span class="card-title">{{investment.user.displayName}}</span>
                    </div>
                    <div style="padding: 7px;">
                        <img src="{{investment.user.image}}" class="rounded-circle responsive-img img-small"
                            alt="investment poster image" style="height: 150px; width: 150px;">
                    </div>

                    <div class="card-action" style="padding-bottom: 13px;">
                        <button type="button" class="btn  btn-primary link-unstyled text-decoration-none"
                            style="background-color: #3498db; border-color: #3498db; "
                            onmouseover="this.style.backgroundColor='#2980b9'"
                            onmouseout="this.style.backgroundColor='#3498db'"
                            onclick="window.location.href='/investment/user/{{investment.user._id}}'">
                            More From {{investment.user.firstName}}
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>